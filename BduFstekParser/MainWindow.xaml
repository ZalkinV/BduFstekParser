<Window x:Class="BduFstekParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BduFstekParser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ListView Name="listViewThreatEntries" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding StringFormat=УБИ. {0}, Path=Id}">Идентификатор угрозы</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}">Наименование угрозы</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="buttonNext" Content="Далее" HorizontalAlignment="Left" Margin="405,315,0,0" VerticalAlignment="Top" Width="70" Click="ButtonNext_Click"/>
        <Button Name="buttonPrevious" Content="Назад" HorizontalAlignment="Left" Margin="325,315,0,0" VerticalAlignment="Top" Width="70" Click="ButtonPrevious_Click"/>

    </Grid>
</Window>
